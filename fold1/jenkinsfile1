pipeline {
    agent any
   
    stages {
        stage('Terraform Init') {
            steps {
                script {
                    sh "'cd fold1 && terraform init'"
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                script {
                    sh "'cd fold1 && terraform apply -auto-approve'"
                }
            }
        }
    }
}

